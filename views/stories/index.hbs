<h1>Stories</h1>
<div class='row'>
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id }}}
                <!--function (storyUser, loggedUser, storyId, floating = true) 
                    we can also put the loggerUser above the each 
                -->
            </div>
            <div class="card-content center-aling">
                <h5>{{titile}}</h5>
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src='{{user.image}}' alt=''>
                    <a href='stories/user/{{user._id}}'>{{user.displayName}}</a>
                </div>
            </div>

            <div class="card-action center-aling">
                <a href="/stories/{{_id}}" class="btn grey">Read More</a>
            </div>

        </div>
    </div>
    {{else}}
    <p>No Stories to display</p>
    {{/each}}
</div>